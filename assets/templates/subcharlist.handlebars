{{#each characters}}
  <tr {{#if wgl4}}class="wgl4"{{/if}}>
    <td class="char"><span>{{{char}}}</span></td>
    <td class="dec">{{code}}</td>
    <td class="hex">{{hexCode}}</td>
    <td class="entity">{{#if htmlEntity}}&amp;{{htmlEntity}};{{/if}}</td>
    <td class="name">
      {{name}}
      {{#if altName}}
        ({{altName}})
      {{/if}}
      <span class="wgl4">(âœ“<span class="large-screen"> in WGL4</span>)</span>
    </td>

    {{#if ../showBlock}}
    <td class="block"><a href="#{{blockId}}">{{block}}</a></td>
    {{/if}}
  </tr>
{{/each}}
